<view class="card"><block wx:if="{{model.mode==='base'}}"><view class="normal-card"><view class="normal-card-image"><image src="{{model.cover[0]}}" mode="aspectFill"></image></view><view class="normal-card-desc"><view class="normal-card-desc-title ellipsis2line"><text>{{model.title}}</text></view><view class="normal-card-desc-info"><view class="normal-card-desc-info-tip">{{''+model.classify+''}}</view><view class="normal-card-desc-info-readnum">{{''+model.browse_count+'阅读'}}</view></view></view></view></block><block wx:if="{{model.mode==='column'}}"><view class="column-card"><view class="column-card-title"><text>{{model.title}}</text></view><view class="column-card-image"><block wx:for="{{model.cover}}" wx:for-item="item" wx:for-index="index" wx:key="*this"><block wx:if="{{index<3}}"><image src="{{item}}" mode="aspectFill"></image></block></block></view><view class="column-card-desc"><view class="column-card-desc-tip">{{''+model.classify+''}}</view><view class="column-card-desc-readnum">{{''+model.browse_count+'阅读'}}</view></view></view></block><block wx:if="{{model.mode==='image'}}"><view class="image-card"><view class="image-card-image"><image src="{{model.cover[0]}}" mode="aspectFill"></image></view><view class="image-card-desc"><view class="image-card-desc-title"><text>{{model.title}}</text></view><view class="image-card-desc-info"><view class="image-card-desc-info-tip">{{''+model.classify+''}}</view><view class="image-card-desc-info-readnum">{{''+model.browse_count+'阅读'}}</view></view></view></view></block></view>